<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EventParticipationApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EventParticipationApp.styles.css" asp-append-version="true" />
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    
    @await RenderSectionAsync("Styles", required: false)
    <style>
        /* Modern Navbar Styling & Fix for Tailwind Conflict */
        .navbar-collapse.collapse {
            display: none;
        }
        .navbar-collapse.collapse.show {
            display: block;
        }
        @@media (min-width: 576px) {
            .navbar-collapse.collapse {
                display: flex !important;
                visibility: visible !important;
            }
        }
        .nav-link {
            font-weight: 500;
            transition: color 0.2s;
        }
        .nav-link:hover {
            color: #6366f1 !important; /* Indigo color on hover */
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid d-flex justify-content-between align-items-center">
                @* Logo / Brand *@
                <a class="navbar-brand m-0 p-0" asp-area="" asp-controller="Home" asp-action="Index">
                    <span class="text-dark fw-bold" style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size: 1.8rem;">
                        Etkinlik Katılım Uygulaması
                    </span> 
                </a>

                @* Navigation Links - Forced display to avoid Tailwind conflicts *@
                <div class="d-flex align-items-center">
                    <ul class="navbar-nav d-flex flex-row gap-3">
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-bold px-2" asp-area="" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-bold px-2" asp-area="" asp-controller="Home" asp-action="Privacy">Gizlilik</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-bold px-2" asp-area="" asp-controller="Events" asp-action="Index">Etkinlikler</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-bold px-2" asp-area="" asp-controller="Participations" asp-action="ByParticipant">Katıldığım Etkinlikler</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <!-- TempData Mesajları Buraya Eklendi -->
        @if (TempData["SuccessMessage"] != null)

        {
            <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)

        {
            <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Etkinlik Katılım Uygulaması - <a asp-area="" asp-controller="Home" asp-action="Privacy">Gizlilik</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>