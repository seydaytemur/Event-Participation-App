@model IEnumerable<EventParticipationApp.Models.Event>

@{
    ViewData["Title"] = "Etkinlikler";
}

@section Styles {
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f8fafc;
        }
        .event-card {
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }
        .event-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
        }
        .bg-purple-light {
            background-color: #f5f3ff;
        }
        .text-purple-main {
            color: #7c3aed;
        }
        .btn-purple {
            background-color: #8b5cf6;
            color: white !important;
            transition: background-color 0.2s;
        }
        .btn-purple:hover {
            background-color: #7c3aed;
        }
    </style>
}

<div class="container mx-auto px-4 py-8">
    <!-- Header Section -->
    <div class="flex flex-col md:flex-row justify-between items-center mb-10 gap-4">
        <div>
            <h1 class="text-4xl font-extrabold text-gray-900 mb-2">Etkinlikler</h1>
            <p class="text-gray-500">Gelecek etkinlikleri inceleyin ve katılın.</p>
        </div>
        <a asp-action="Create" class="btn-purple px-6 py-3 rounded-xl font-bold flex items-center gap-2 shadow-lg shadow-purple-200">
            <i class="fas fa-plus-circle"></i>
            Yeni Etkinlik Ekle
        </a>
    </div>

    <!-- Events Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        @foreach (var item in Model)
        {
            <div class="event-card bg-white border border-gray-100 rounded-2xl overflow-hidden shadow-sm flex flex-col h-full">
                <!-- Card Header/Image Placeholder -->
                <div class="h-32 bg-gradient-to-br from-purple-400 to-indigo-500 relative">
                    <div class="absolute -bottom-6 left-6 bg-white p-3 rounded-xl shadow-md">
                        <i class="fas fa-calendar-alt text-purple-600 text-2xl"></i>
                    </div>
                </div>

                <!-- Card Content -->
                <div class="p-8 pt-10 flex-grow">
                    <h3 class="text-2xl font-bold text-gray-800 mb-3">@item.Title</h3>
                    <p class="text-gray-600 mb-6 line-clamp-3">@item.Description</p>
                    
                    <div class="flex items-center text-gray-500 text-sm mb-4">
                        <i class="far fa-clock mr-2 text-purple-400"></i>
                        <span>@item.EventDate.ToString("dd MMM yyyy, HH:mm")</span>
                    </div>
                </div>

                <!-- Card Actions -->
                <div class="px-6 py-4 bg-gray-50 border-t border-gray-100 flex flex-wrap items-center justify-between gap-3">
                    <div class="flex gap-2">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="px-3 py-2 rounded-lg flex items-center gap-2 bg-amber-100 text-amber-700 hover:bg-amber-200 transition-all text-xs font-bold shadow-sm" title="Düzenle">
                            <i class="fas fa-edit"></i>
                            <span>Düzenle</span>
                        </a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="px-3 py-2 rounded-lg flex items-center gap-2 bg-blue-100 text-blue-700 hover:bg-blue-200 transition-all text-xs font-bold shadow-sm" title="Detaylar">
                            <i class="fas fa-info-circle"></i>
                            <span>Detaylar</span>
                        </a>
                    </div>

                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Bu etkinliği silmek istediğinize emin misiniz?');">
                        <button type="submit" class="px-3 py-2 rounded-lg flex items-center gap-2 bg-red-100 text-red-700 hover:bg-red-200 transition-all text-xs font-bold shadow-sm" title="Sil">
                            <i class="fas fa-trash-alt"></i>
                            <span>Sil</span>
                        </button>
                    </form>
                </div>
            </div>
        }
    </div>
    
    @if (!Model.Any())
    {
        <div class="text-center py-20 bg-white rounded-3xl border-2 border-dashed border-gray-200">
            <div class="text-6xl text-gray-300 mb-4">
                <i class="fas fa-calendar-times"></i>
            </div>
            <h3 class="text-xl font-medium text-gray-500">Henüz bir etkinlik bulunmuyor.</h3>
            <a asp-action="Create" class="text-purple-600 font-bold hover:underline mt-2 inline-block">İlk etkinliği sen oluştur!</a>
        </div>
    }
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}