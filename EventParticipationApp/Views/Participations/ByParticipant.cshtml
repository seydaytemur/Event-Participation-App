@model List<EventParticipationApp.Models.Participation>

@{
    ViewData["Title"] = "Katıldığım Etkinlikler";
}

@section Styles {
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f8fafc;
        }
        .search-card {
            background: linear-gradient(135deg, #8b5cf6 0%, #6366f1 100%);
        }
        .event-item:hover {
            border-color: #8b5cf6;
            background-color: #f5f3ff;
        }
    </style>
}

<div class="container mx-auto px-4 py-8">
    <!-- Header Section -->
    <div class="mb-10 text-center">
        <h1 class="text-4xl font-extrabold text-gray-900 mb-2">Katıldığım Etkinlikler</h1>
        <p class="text-gray-500">Adınızla arama yaparak katıldığınız tüm etkinlikleri listeleyebilirsiniz.</p>
    </div>

    <!-- Modern Search Card -->
    <div class="max-w-3xl mx-auto mb-12">
        <div class="search-card p-8 rounded-3xl shadow-xl shadow-purple-200">
            <form method="post" class="relative">
                <div class="flex flex-col md:flex-row gap-4">
                    <div class="relative flex-grow">
                        <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                            <i class="fas fa-user text-purple-300"></i>
                        </div>
                        <input type="text" name="participantName" 
                               class="block w-full pl-11 pr-4 py-4 bg-white/10 border border-white/20 rounded-2xl text-white placeholder-purple-200 focus:outline-none focus:ring-2 focus:ring-white/50 transition-all font-medium text-lg"
                               placeholder="Adınızı ve soyadınızı giriniz..." required
                               value="@ViewBag.ParticipantName">
                    </div>
                    <button type="submit" class="bg-white text-purple-600 hover:bg-purple-50 px-8 py-4 rounded-2xl font-bold transition-all flex items-center justify-center gap-2 shadow-lg">
                        <i class="fas fa-search"></i>
                        Katılımları Listele
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Results Section -->
    @if (ViewBag.ParticipantName != null)
    {
        <div class="max-w-5xl mx-auto">
            <div class="flex items-center gap-3 mb-6">
                <div class="h-10 w-1 flex bg-purple-600 rounded-full"></div>
                <h2 class="text-2xl font-bold text-gray-800">
                    <span class="text-purple-600">@ViewBag.ParticipantName</span> için bulunan sonuçlar
                </h2>
            </div>

            @if (Model != null && Model.Any())
            {
                <div class="grid gap-4">
                    @foreach (var item in Model)
                    {
                        var isPast = item.Event.EventDate < DateTime.Now;
                        <div class="event-item bg-white p-6 rounded-2xl border-2 border-transparent shadow-sm transition-all flex flex-col md:flex-row md:items-center justify-between gap-4">
                            <div class="flex gap-4 items-center">
                                <div class="w-14 h-14 rounded-xl flex items-center justify-center @(isPast ? "bg-gray-100 text-gray-400" : "bg-purple-100 text-purple-600") flex-shrink-0">
                                    <i class="fas @(isPast ? "fa-calendar-check" : "fa-calendar-day") text-2xl"></i>
                                </div>
                                <div>
                                    <h4 class="text-xl font-bold text-gray-800">@item.Event.Title</h4>
                                    <div class="flex items-center text-gray-500 text-sm mt-1">
                                        <i class="far fa-clock mr-2"></i>
                                        <span>@item.Event.EventDate.ToString("dd MMM yyyy, HH:mm")</span>
                                    </div>
                                </div>
                            </div>

                            <div class="hidden lg:block flex-grow px-8">
                                <p class="text-gray-500 text-sm line-clamp-1 italic">
                                    "@(item.Event.Description ?? "Açıklama bulunmuyor")"
                                </p>
                            </div>

                            <div class="flex items-center gap-4">
                                @if (isPast)
                                {
                                    <span class="px-4 py-1.5 rounded-full bg-gray-100 text-gray-500 text-xs font-bold uppercase tracking-wider">
                                        Tamamlandı
                                    </span>
                                }
                                else
                                {
                                    <span class="px-4 py-1.5 rounded-full bg-green-100 text-green-600 text-xs font-bold uppercase tracking-wider">
                                        Yaklaşıyor
                                    </span>
                                }
                                <a href="/Events/Details/@item.EventId" class="text-purple-600 hover:text-purple-800 font-bold text-sm flex items-center gap-1 group">
                                    Detaylar
                                    <i class="fas fa-chevron-right text-xs group-hover:translate-x-1 transition-transform"></i>
                                </a>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-16 bg-white rounded-3xl border-2 border-dashed border-gray-200">
                    <div class="text-6xl text-amber-300 mb-4 scale-x-[-1]">
                        <i class="fas fa-search"></i>
                    </div>
                    <h3 class="text-xl font-medium text-gray-500">Üzgünüz, herhangi bir katılım kaydı bulamadık.</h3>
                    <p class="text-gray-400 mt-2">Lütfen adınızı doğru yazdığınızdan emin olun.</p>
                </div>
            }
            
            <div class="mt-8 text-center text-gray-400 text-sm italic">
                Son güncelleme: @DateTime.Now.ToString("dd.MM.yyyy HH:mm")
            </div>
        </div>
    }
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
